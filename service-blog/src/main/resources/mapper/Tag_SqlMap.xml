<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zvz.serviceblog.dao.ITagDao">

	<resultMap id="TagMap" type="com.zvz.serviceblog.model.Tag">
		<result property="id" column="id" />
		<result property="name" column="name" />
	</resultMap>
	<resultMap id="TagVoMap" type="com.zvz.serviceblog.vo.TagVo">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="counts" column="article_counts" />
	</resultMap>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT
		INTO t_tag(name)
		VALUES
		(#{name,jdbcType=VARCHAR})
	</insert>
	<insert id="update">
		UPDATE t_tag
		SET name=#{name,jdbcType=VARCHAR}
        WHERE id = #{id,jdbcType=INTEGER}
	</insert>
	<delete id="delete">
		DELETE FROM t_tag
		WHERE id = #{id,jdbcType=INTEGER}
	</delete>

	<select id="selectById" resultMap="TagMap">
		SELECT * FROM t_tag
		WHERE
		id=#{id,jdbcType=INTEGER}
	</select>

	<select id="selectByIds" resultMap="TagMap">
		SELECT * FROM t_tag
		<if test="ids!=null">
			<if test="ids.size()==0">
				WHERE id = 0
			</if>
			<if test="ids.size()!=0">
				WHERE id IN
				<foreach collection="ids" index="index" item="item" open="("
					separator="," close=")">
					#{item,jdbcType=INTEGER}
				</foreach>
			</if>
		</if>

	</select>

	<select id="selectBy" resultMap="TagMap">
		SELECT * FROM t_tag
		ORDER BY id
	</select>
	<select id="selectVoBy" resultMap="TagVoMap">
	    	SELECT t1.*, ( 
				    	select count(*) 
				    	from  t_article t2 
				    	where t2.tag_ids like CONCAT(CONCAT('%',CONCAT(t1.id, ',')), '%')
					    	<if test="articleStatus!=null">
						    		and t2.status = #{articleStatus,jdbcType=INTEGER}
						    </if>
				    	) as article_counts 
			FROM t_tag t1 
			ORDER BY article_counts desc
	</select>

	<select id="selectByName" resultMap="TagMap">
		SELECT * FROM t_tag
		WHERE
		name = #{name,jdbcType=VARCHAR}
		limit 1
	</select>

</mapper>